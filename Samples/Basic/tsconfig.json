{
    "extends": "../../tsconfig.settings.json",
    "compilerOptions": {
        "rootDir": ".",
        "baseUrl": ".",
        "outDir": "./Build",
        "paths": {
            "@dolittle/observability.components/*": [ "../../Source/components/*" ],
            "@dolittle/observability.data/*": [ "../../Source/data/*" ],
            "@dolittle/observability.sources/*": [ "../../Source/sources/*" ],
